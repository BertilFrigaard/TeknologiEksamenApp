<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeknologiEksamenApp.Views.AfterLogin.AddExpensePage"
             Title="AddExpensePage">
    <VerticalStackLayout
        Padding="50"
        VerticalOptions="Center">
        <Label 
            HorizontalTextAlignment="Center"
            Text="Add Expense"/>
        <Picker
            x:Name="PickerGame"
            />
        <Entry
            x:Name="EntryAmount"
            Placeholder="Amount"/>
        <Button
            x:Name="BtnAdd"
            Text="Add"
            Clicked="BtnAddClicked"/>
        <Button
            x:Name="BtnReturn"
            Text="Return"
            Clicked="BtnReturnClicked"/>
    </VerticalStackLayout>
</ContentPage>