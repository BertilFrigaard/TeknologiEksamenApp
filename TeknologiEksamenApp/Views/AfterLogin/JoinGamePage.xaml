<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeknologiEksamenApp.Views.AfterLogin.JoinGamePage"
             Title="JoinGamePage">
    <VerticalStackLayout
        Padding="50"
        VerticalOptions="Center">
        <Label 
            HorizontalTextAlignment="Center"
            Text="Join Game"/>
        <Entry
            x:Name="EntryJoinCode"
            Placeholder="Game Join Code"/>
        <Entry
            x:Name="EntryPassword"
            Placeholder="Game Password (Optional)"
            IsPassword="True"/>
        <Button
            x:Name="BtnJoin"
            Text="Join"
            Clicked="BtnJoinClicked"/>
        <Button
            x:Name="BtnReturn"
            Text="Return"
            Clicked="BtnReturnClicked"/>
    </VerticalStackLayout>
</ContentPage>