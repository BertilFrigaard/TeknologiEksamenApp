<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeknologiEksamenApp.Views.AfterLogin.AccountPage"
             Title="AccountPage">
    <VerticalStackLayout
        Padding="50"
        VerticalOptions="Center">
        <Label 
            x:Name="LabelUsername"
            Text="LOADING USER"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            Text="GAMES"
            HorizontalTextAlignment="Center"
            FontAttributes="Bold"
            FontSize="20"
            TextDecorations="Underline"/>

        <CollectionView
            MaximumHeightRequest="500"
            x:Name="CollectionGameCards"
            SelectionMode="Single"
            SelectionChanged="CollectionGameCardsSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border
                        HeightRequest="200"
                        WidthRequest="{Binding Source={x:Reference CollectionGameCards}, Path=Width}"
                        Padding="20"
                        BackgroundColor="Yellow">
                        <Label 
                            Text="{Binding Title}"
                            HorizontalOptions="Center"
                            FontSize="20"
                            TextDecorations="Underline"/>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <Button
            x:Name="BtnRefresh"
            Clicked="BtnRefreshClicked"
            Text="Refresh"/>
        <Button
            x:Name="BtnAddExpense"
            Clicked="BtnAddExpenseClicked"
            Text="Add Expense"/>
        <Button
            x:Name="BtnCreateGame"
            Clicked="BtnCreateGameClicked"
            Text="Create Game"/>
        <Button
            x:Name="BtnJoinGame"
            Clicked="BtnJoinGameClicked"
            Text="Join Game"/>
        <Button
            x:Name="BtnLogout"
            Clicked="BtnLogoutClicked"
            Text="Logout"/>

    </VerticalStackLayout>
</ContentPage>