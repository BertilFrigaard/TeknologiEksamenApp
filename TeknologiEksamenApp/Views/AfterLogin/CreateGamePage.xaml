<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeknologiEksamenApp.Views.AfterLogin.CreateGamePage"
             Title="CreateGamePage">
    <VerticalStackLayout
        Style="{StaticResource UsualStack}">
        <Label 
            Style="{StaticResource LabelTitle2}"
            Text="Create Game"/>
        <Entry
            x:Name="EntryName"
            Placeholder="Game name"/>
        <Entry
            x:Name="EntryBudget"
            Placeholder="Budget"/>
        <Entry
            x:Name="EntryPeriod"
            Placeholder="Game period in days"/>
        <Entry
            x:Name="EntryPassword"
            Placeholder="Game password (Optional)"
            IsPassword="True"/>
        <Button
            x:Name="BtnCreate"
            Style="{StaticResource ButtonPrimary}"
            Text="Create"
            Clicked="BtnCreateClicked"/>
        <Button
            x:Name="BtnReturn"
            Style="{StaticResource ButtonSecondary}"
            Text="Return"
            Clicked="BtnReturnClicked"/>
    </VerticalStackLayout>
</ContentPage>