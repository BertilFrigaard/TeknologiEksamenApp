<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeknologiEksamenApp.Views.BeforeLogin.MissingVerifactionPage"
             Title="MissingVerifactionPage">
    <VerticalStackLayout
        Style="{StaticResource UsualStack}">
        <VerticalStackLayout>
            <Label 
                Style="{StaticResource LabelTitle2}"
                Text="Missing Verifiaction"/>
            <Label 
                Style="{StaticResource LabelTitle2}"
                Text="Check your email!"/>
        </VerticalStackLayout>
        <Button
            x:Name="BtnReturn"
            Style="{StaticResource ButtonPrimary}"
            Text="I have verified"
            Clicked="BtnReturnClicked"/>
    </VerticalStackLayout>
</ContentPage>