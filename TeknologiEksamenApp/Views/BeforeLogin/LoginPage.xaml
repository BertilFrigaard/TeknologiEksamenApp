<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeknologiEksamenApp.Views.BeforeLogin.LoginPage"
             Title="LoginPage">

    <VerticalStackLayout
        Style="{StaticResource UsualStack}">
        <Label 
            Style="{StaticResource LabelTitle2}"
            Text="LOGIN"/>
        <Entry
            x:Name="EntryEmail"
            Placeholder="Email"/>
        <Entry
            x:Name="EntryPassword"
            Placeholder="Password"
            IsPassword="True"/>
        <Button
            x:Name="BtnLogin"
            Style="{StaticResource ButtonPrimary}"
            Text="Login"
            Clicked="BtnLoginClicked"/>
        <Button
            x:Name="BtnReturn"
            Style="{StaticResource ButtonSecondary}"
            Text="Return"
            Clicked="BtnReturnClicked"/>
    </VerticalStackLayout>
</ContentPage>